{
    "compilerOptions": {
        "rootDir": "src",
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}